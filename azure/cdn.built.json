      "properties": {
        "originGroup": {
          "id": "[resourceId('Microsoft.Cdn/profiles/originGroups', format('fd-{0}', uniqueString(resourceGroup().id)), 'og-default')]"
        },
        "supportedProtocols": [
          "Http",
          "Https"
        ],
        "httpsRedirect": "Enabled",
        "linkToDefaultDomain": "Disabled",
        "customDomains": [
          {
            "id": "[resourceId('Microsoft.Cdn/profiles/customDomains', format('fd-{0}', uniqueString(resourceGroup().id)), format('cd-{0}', uniqueString(parameters('domain_fqdn'))))]"
          }
        ],
        "patternsToMatch": [
          "/*"
        ],
        "forwardingProtocol": "MatchRequest",
        "enabledState": "Enabled"

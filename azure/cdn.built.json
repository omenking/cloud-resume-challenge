          "id": "[extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('dns_zone_rg')), 'Microsoft.Network/dnsZones', parameters('dns_zone_name'))]"
        },
        "tlsSettings": {
          "certificateType": "ManagedCertificate",
          "minimumTlsVersion": "TLS12"

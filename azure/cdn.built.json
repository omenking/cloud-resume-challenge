      "dependsOn": [
        "[resourceId('Microsoft.Cdn/profiles/customDomains', format('fd-{0}', uniqueString(resourceGroup().id)), format('cd-{0}', uniqueString(parameters('domain_fqdn'))))]",
        "[resourceId('Microsoft.Cdn/profiles/afdEndpoints', format('fd-{0}', uniqueString(resourceGroup().id)), format('ep-{0}', uniqueString(resourceGroup().id)))]",

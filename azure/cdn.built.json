      "name": "[format('{0}/{1}', format('fd-{0}', uniqueString(resourceGroup().id)), format('cd-{0}', uniqueString(parameters('domain_fqdn'))))]",
      "properties": {
        "hostName": "[parameters('domain_fqdn')]",

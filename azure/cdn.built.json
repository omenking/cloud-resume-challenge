        "httpPort": 80,
        "httpsPort": 443,
        "originHostHeader": "[parameters('origin_hostname')]",
        "priority": 1,
        "weight": 1000
      },
      "dependsOn": [
        "[resourceId('Microsoft.Cdn/profiles/originGroups', format('fd-{0}', uniqueString(resourceGroup().id)), 'og-default')]"
      ]
    },

      "value": "[reference(resourceId('Microsoft.Cdn/profiles/afdEndpoints', format('fd-{0}', uniqueString(resourceGroup().id)), format('ep-{0}', uniqueString(resourceGroup().id))), '2025-06-01').hostName]"

{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.38.33.27573",
      "templateHash": "5445477887159726762"
    }
  },
  "parameters": {
    "cosmosdb_account_name": {
      "type": "string",
      "metadata": {
        "description": "Name of the Cosmos DB account"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for the Cosmos DB account"
      }
    },
    "databaseName": {
      "type": "string",
      "defaultValue": "viewCounterDb",
      "metadata": {
        "description": "Name of the database"
      }
    },
    "containerName": {
      "type": "string",
      "defaultValue": "counter",
      "metadata": {
        "description": "Name of the container"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2023-03-15",
      "name": "[parameters('cosmosdb_account_name')]",
      "location": "[parameters('location')]",
      "kind": "GlobalDocumentDB",
      "properties": {
        "databaseAccountOfferType": "Standard",
        "locations": [
          {
            "locationName": "[parameters('location')]",
            "failoverPriority": 0
          }
        ],
        "enableFreeTier": true,
        "consistencyPolicy": {
          "defaultConsistencyLevel": "Session"
        }
      }
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases",
      "apiVersion": "2023-03-15",
      "name": "[format('{0}/{1}', parameters('cosmosdb_account_name'), format('{0}', parameters('databaseName')))]",
      "properties": {
        "resource": {
          "id": "[parameters('databaseName')]"
        },
        "options": {
          "throughput": 400
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosdb_account_name'))]"
      ]
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases/containers",
      "apiVersion": "2023-03-15",
      "name": "[format('{0}/{1}/{2}', parameters('cosmosdb_account_name'), format('{0}', parameters('databaseName')), format('{0}', parameters('containerName')))]",
      "properties": {
        "resource": {
          "id": "[parameters('containerName')]",
          "partitionKey": {
            "paths": [
              "/id"
            ],
            "kind": "Hash"
          },
          "indexingPolicy": {
            "indexingMode": "Consistent"
          },
          "defaultTtl": -1
        },
        "options": {}
      },
      "dependsOn": [
        "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlDatabases', parameters('cosmosdb_account_name'), format('{0}', parameters('databaseName')))]"
      ]
    }
  ]
}